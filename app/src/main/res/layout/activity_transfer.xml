<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLitleTrans"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="80dp"
            android:text="Danh Sách Điều Chuyển 2021-04"
            android:textAlignment="center"
            android:textColor="#1B0202"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="130dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:text="Năm/Tháng:"
            android:textColor="#1B0202" />

        <EditText
            android:id="@+id/y_m_time_leave"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="yyyy/mm"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tìm Kiếm" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Tên"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="P.Hiện tại"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="P. Mới"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="TP.Hiện tại"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="TP.Mới"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="33dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Giám đốc"
            android:textAlignment="center"
            android:textColor="#120101"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvTransfer"
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:layout_marginTop="200dp" />
</FrameLayout>